doctype html
html(lang="en")

  head
    script(src='/jquery/jquery.js')
    script(src='/angular/angular.js')
    link(rel='stylesheet', href='/css/main.css')
    script(src='/js/global.js')
    block extrahead

    title= title

  body()
    #wrapper
      #nav
        block nav
          center
            nav
              a.button(href='/play') Play
              a.button(href='/instructions') Instructions
              a.button(href='/leaderboard') Leaderboard
              a.button(href='/comments') Comments
              .dropdown
                a.button.drop-btn(href='#') Meta
                .drop-content
                  a(href='/theme') Theme
                  a(href='/testing') Testing
                  a(href='/architecture') Architecture
                  a(href='/about-us') About Us
              if user
                a.button(href='/logout') Logout
              else
                a.button(href='/login') Login
          hr
      #heading
        block heading
          h3 #{title}
      #content
        block content
          p There is no content here
      #footer
        block footer
          hr
          table
            tr
              td#authors By Tim Metcalf and Don Wimodya Athukorala
              td#last-modified Last modified 22nd Apr.
            tr
              td#Date
                script.
                  var today = new Date();
                  document.getElementById('Date').innerHTML = today.toDateString();
              if user
                td#user Logged in as: #{user.name}
